<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="standard" parent="@android:style/TextAppearance.Material.Small" >
        <item name="android:gravity" >bottom|left</item>
    </style>
    <style name="entry1" parent="standard" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:fontFamily" >Helvetica</item>
        <item name="android:typeface" >sans</item>
        <item name="android:linksClickable" >false</item>
        <item name="android:password">false</item>
    </style>
    <style name="entryText" parent="standard" >
    </style>
    <style name="labelText" parent="standard" >
        <item name="android:textStyle" >bold</item>
    </style>
    <style name="codeText" parent="standard" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:fontFamily" >Times</item>
        <item name="android:typeface" >monospace</item>
        <item name="android:linksClickable" >false</item>
        <item name="android:password">false</item>
    </style>
    <style name="urlText" parent="standard" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:fontFamily" >Times</item>
        <item name="android:typeface" >monospace</item>
        <item name="android:linksClickable" >true</item>
        <item name="android:password">false</item>
    </style>
    <style name="passwordText" parent="standard" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:fontFamily" >Times</item>
        <item name="android:typeface" >monospace</item>
        <item name="android:linksClickable" >false</item>
        <item name="android:password">true</item>
    </style>
    <style name="myText" parent="standard" >
        <item name="android:textSize" >8dp</item>
        <item name="android:textStyle" >normal</item>
        <item name="android:fontFamily" >fonts/arial.ttf</item>
        <item name="android:linksClickable" >false</item>
        <item name="android:password">false</item>
    </style>
</resources>
